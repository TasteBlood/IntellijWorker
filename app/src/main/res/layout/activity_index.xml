<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".main.IndexActivity">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/start_index"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:lineSpacingExtra="5dip"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dip"
        android:gravity="center"
        android:text="白银市白银区\n民情信息监督反馈平台"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="All rights reserved by CloudCreativity"/>
</RelativeLayout>